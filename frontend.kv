<CameraScreen>:
    GridLayout:
        cols: 1
        padding: 10  #Razmak izmedju vidzeta i frejma
        spacing: 10  #Razmak izmedju vidzeta
        Camera:
            id: camera
            resolution: (640, 480)
            play: False  #Ovom komandom kamera je ugasena
            size_hint_y: 0.8  #Na ovaj nacin podesavam velicinu ekrana, koja uvek mora biti jednaka 1.0
            opacity: 0  #Kamera je nevidljiva, a po defaultu je vrednost 1. To je mala bela kockica koja stoji u donjem levom uglu aplikacije
        Button:
            id: camera_button
            text: "Start Camera"
            on_press: root.start() if root.ids.camera.play == False else root.stop()   #Ovo pokrecemo samo kada je kamera ugasena, a zatim ako je upaljena pokrecemo stop()
            size_hint_y: 0.1
            background_normal: "images/normal.png"  #Dugme ce imati ovu boju kada nije pritisnuto
            background_down: "images/down.png"    #A kad je pritisnuto, imace ovu boju
        Button:
            text: "Capture"
            on_press: root.capture()
            size_hint_y: 0.1
            background_normal: "images/normal.png"  #Dugme ce imati ovu boju kada nije pritisnuto
            background_down: "images/down.png"    #A kad je pritisnuto, imace ovu boju


<ImageScreen>:
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10
        Image:
            id: img
            size_hint_y: 0.7 
        Button:
            text: "Create Sharable Link"
            on_press: root.create_link()  #Na ovaj nacin hocemo da kreiramo link
            size_hint_y: 0.1
            background_normal: "images/normal.png"
            background_down: "images/down.png"
        Label:
            id: link
            text: ""  #Ovde ide prazan link za string
            size_hint_y: 0.1
        GridLayout:  #Ovaj GridLayout smo dodali u okviru prvog GridLayout, jer moramo da definisemo dve kolone, za dva dugmeta, zato smo ovo uradili
            cols: 2  #Znaci da imamo dve kolone, sa dva dugmeta 
            size_hint_y: 0.1
            Button:
                text: "Copy Link"
                on_press: root.copy_link()
                background_normal: "images/normal.png"
                background_down: "images/down.png"
            Button:
                text: "Open Link"
                on_press: root.open_link()
                background_normal: "images/normal.png"
                background_down: "images/down.png"


<RootWidget>:
    CameraScreen:
        id: camera_screen
        name: "camera_screen"
    ImageScreen:
        id: image_screen
        name: "image_screen"